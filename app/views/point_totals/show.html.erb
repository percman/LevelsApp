<% if can? :manage, PointTotal %>
<%- model_class = PointTotal -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:student_id) %>:</strong></dt>
  <dd><%= @point_total.student.last_first %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
  <dd><%= @point_total.date.to_formatted_s(:long) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:score) %>:</strong></dt>
  <dd><%= @point_total.score %></dd>
  <dt><strong><%= model_class.human_attribute_name(:absent) %>:</strong></dt>
  <dd><%= @point_total.absent %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              student_point_totals_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_student_point_total_path(@student, @point_total), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              student_point_total_path(@student, @point_total),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<% end %>