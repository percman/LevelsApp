<% if can? :manage, User %>
  <%- model_class = User -%>
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
  </div>

  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
    <dd><%= @user.email %></dd>
    <dt><strong><%= model_class.human_attribute_name(:category) %>:</strong></dt>
    <dd><%= @user.category %></dd>
    <dt><strong><%= model_class.human_attribute_name(:student) %>:</strong></dt>
    <dd><%= @user.student.try(:last_first) %></dd>
  </dl>

  <%= link_to t('.back', :default => t("helpers.links.back")),
                users_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_user_path(@user), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                user_path(@user),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
<% else %>
    Sorry, this page is only viewable by an administrator.
<%end %>